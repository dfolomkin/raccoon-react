{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist/",
    "paths": {
      "common": ["./src/common"],
      "common/*": ["./src/common/*"],
      "components": ["./src/components"],
      "components/*": ["./src/components/*"],
      "pages": ["./src/pages"],
      "pages/*": ["./src/pages/*"],
      "images": ["./src/assets/images"],
      "images/*": ["./src/assets/images/*"],
    },
    "noImplicitAny": true,
    "module": "esnext",
    "target": "es6",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "plugins": [
      {
        "name": "typescript-plugin-css-modules",
      }
    ]
  },
}