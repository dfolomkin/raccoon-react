{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist/",
    "paths": {
      "store": [
        "./src/store"
      ],
      "store/*": [
        "./src/store/*"
      ],
      "shared": [
        "./src/shared"
      ],
      "shared/*": [
        "./src/shared/*"
      ],
      "components": [
        "./src/components"
      ],
      "components/*": [
        "./src/components/*"
      ],
      "pages": [
        "./src/pages"
      ],
      "pages/*": [
        "./src/pages/*"
      ],
      "services": [
        "./src/services"
      ],
      "services/*": [
        "./src/services/*"
      ],
      "images": [
        "./src/assets/images"
      ],
      "images/*": [
        "./src/assets/images/*"
      ],
    },
    "noImplicitAny": true,
    "module": "esnext",
    "target": "es6",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "plugins": [
      {
        "name": "typescript-plugin-css-modules",
      },
    ],
    "types": [
      "jest",
      "@testing-library/jest-dom",
      "jest-styled-components"
    ],
  },
}